{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "g++",
      "args": ["-std=c++17", "-o", "${fileBasenameNoExtension}", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "compile and run",
      "type": "shell",
      "command": "g++ -std=c++17 -o ${fileBasenameNoExtension} \"${file}\" && ./${fileBasenameNoExtension} < input.txt > output.txt",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "run with input/output",
      "type": "shell",
      "command": "./${fileBasenameNoExtension}",
      "args": ["<", "input.txt", ">", "output.txt"],
      "group": "test",
      "dependsOn": ["compile"],
      "problemMatcher": []
    }
  ]
}
